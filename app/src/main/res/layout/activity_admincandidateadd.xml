<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admincandidateadd"
    android:background="@drawable/bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AB363535"></LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/candid"
        android:hint="Candidate ID"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:background="#38ffffff"
        android:drawablePadding="20dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/candname"
        android:hint="Name of Candidate"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:background="#38ffffff"
        android:drawablePadding="20dp"
        android:layout_below="@+id/candid"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/canddesc"
        android:layout_below="@id/candname"
        android:hint="Description of Candidate"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:background="#38ffffff"
        android:drawablePadding="20dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/candadd"
        android:layout_below="@id/canddesc"
        android:hint="Address of Candidate"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:background="#38ffffff"
        android:drawablePadding="20dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/candmob"
        android:layout_below="@id/candadd"
        android:hint="Mobile no of Candidate"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:background="#38ffffff"
        android:drawablePadding="20dp"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/candgrp"
        android:layout_below="@id/candmob"
        android:hint="Enter Your Group ID"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:background="#38ffffff"
        android:drawablePadding="20dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/candsave"
        android:layout_below="@+id/candgrp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:layout_marginTop="20dp"
        android:background="#002366"
        android:text="SAVE"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="20dp"
        android:onClick="process1"
        />

</RelativeLayout>