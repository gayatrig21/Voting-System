<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Adminchangepassword"
    android:background="@drawable/bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AB363535"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:id="@+id/txtchangeadpass"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="40dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/adminuname"
        android:layout_below="@id/txtchangeadpass"
        android:hint="Username"
        android:layout_marginTop="30dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:padding="20dp"
        android:background="#38ffffff"
        android:drawablePadding="20dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/new_pass"
        android:layout_below="@id/adminuname"
        android:hint="New Password"
        android:layout_marginTop="30dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:padding="20dp"
        android:background="#38ffffff"
        android:drawablePadding="20dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/confirm_pass"
        android:layout_below="@id/new_pass"
        android:hint="Confirm Password"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:background="#38ffffff"
        android:drawablePadding="20dp"
        />

    <Button
        android:id="@+id/confirmbtn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/confirm_pass"
        android:layout_centerInParent="true"
        android:ems="12"
        android:textColor="#FFFFFF"
        android:background="#002366"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:text="Confirm"/>
</RelativeLayout>
