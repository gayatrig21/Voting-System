<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_login"
    android:background="@drawable/bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AB363535" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_login"
        android:text="Login"
        android:textSize="55dp"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:textColor="#FFFFFF"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_username"
        android:layout_below="@id/user_login"
        android:hint="Username"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:background="#38ffffff"
        android:drawableLeft="@drawable/ic_person_outline_black_24dp"
        android:drawablePadding="20dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_password"
        android:layout_below="@id/user_username"
        android:hint="Password"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:background="#38ffffff"
        android:drawableLeft="@drawable/ic_info_black_24dp"
        android:drawablePadding="20dp"
        android:inputType="textPassword"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/user_forgotpass"
    android:text="Forgot Password?"
    android:textSize="20dp"
    android:layout_alignParentRight="true"
    android:layout_marginTop="10dp"
    android:textColor="#ffffff"
    android:textStyle="bold"
    android:layout_below="@+id/user_password"/>




<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Verify Fingerprint"
    android:background="#002366"
    android:textColor="#ffffff"
    android:layout_below="@id/user_password"
    android:layout_marginTop="60dp"
    android:textSize="20dp"
    android:layout_centerInParent="true"
    android:id="@+id/fingerprintbutton"/>

    <TextView
        android:layout_below="@id/fingerprintbutton"
        android:id="@+id/msgtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FFFFFF"
        android:layout_marginTop="30dp"
        android:textSize="16dp" />


    <Button
        android:id="@+id/btn_login"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/msgtext"
        android:layout_centerInParent="true"
        android:ems="9"
        android:textColor="#FFFFFF"
        android:background="#002366"
        android:layout_marginTop="44dp"
        android:onClick="login"
        android:textSize="20dp"
        android:text="Login"/>

    <Button
        android:id="@+id/user_login_nr"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/btn_login"
        android:layout_centerInParent="true"
        android:ems="9"
        android:background="#002366"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:text="New Registration"/>

</RelativeLayout>