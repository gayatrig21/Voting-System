<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminLogin"
    android:background="@drawable/bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AB363535">

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/adminlog"
        android:text="Login"
        android:textSize="55dp"
        android:layout_margin="50dp"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:textColor="#FFFFFF"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/adminusername"
        android:layout_below="@id/adminlog"
        android:hint="Username"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:background="#38ffffff"
        android:drawableLeft="@drawable/ic_person_outline_black_24dp"
        android:drawablePadding="20dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/adminpassword"
        android:layout_below="@id/adminusername"
        android:hint="Password"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:background="#38ffffff"
        android:drawableLeft="@drawable/ic_info_black_24dp"
        android:drawablePadding="20dp"
        android:inputType="textPassword"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textColor="#ffffff"
        android:layout_below="@id/adminpassword"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:textSize="20dp"
        android:id="@+id/adminforgotpass"
        android:layout_marginTop="6dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adminpassword"
        android:text="Login"
        android:backgroundTint="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/logbtn"

        />
</RelativeLayout>